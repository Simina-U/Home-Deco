<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
  <body>
  <%- include('./partials/nav.ejs') %>
  <div class="container">
    <h1 class="my-3"><%= item['item-name'] %></h1>
    <p class="text-muted"><b>Listed on:</b> <%= `${item.createdAt.toLocaleDateString()}`%></p>
    <!-- <h5>Category:<span class="skewed"><%= item['item-category'] %> </span></h5> -->
    <div class="item-image">
      <img src="../public/img/<%= item.image %>"/>
    </div>
    <p>
      <%= item['item-description'] %>
    </p>
    <p class="price"><b>Price:</b> <%= item.price %> EUR</p>
    <p class="seller-email"><b>Seller's Email:</b> <%= item['seller-email'] %></p>
    <p class="seller-name"><b>Seller's Name: </b><%= item['seller-name'] %></p>

    <a class="btn btn-dark" href="/">Homepage</a>
    <a class="btn btn-danger delete" data-doc="<%= item._id %>">Delete</a>
  </div>

  <%- include('./partials/footer.ejs') %>
    <script>

      const bin = document.querySelector(".delete");

      bin.addEventListener("click", (e) => {
        e.preventDefault();
        const endpoint = `/all-items/${bin.dataset.doc}`;

        fetch(endpoint, {
          method: "DELETE",
        })
          .then((response) => {
            response.json();
          })
          .then((data) => {
            window.location.href = data.redirect;
          })
          .catch((err) => {
            console.log(err);
          });
      });
         

    </script>
  </body>
</html>
